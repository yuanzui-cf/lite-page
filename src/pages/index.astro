---
import Body from "../layouts/Body.astro";
import Footer from "../layouts/Footer.astro";
import Frame from "../layouts/Frame.astro";
import Head from "../layouts/Head.astro";
import Header from "../layouts/Header.astro";
import Button from "../components/Button.astro";
import About from "../widgets/About.astro";
import TimeLine from "../widgets/TimeLine.astro";

const links = Astro.locals.config.links;
---

<Frame>
    <Head />
    <Body>
        <Header />
        <div id="intro">
            <h1>Hello, I'm&nbsp;<span>{Astro.locals.config.name}</span></h1>
            <h2>{Astro.locals.config.site?.subtitle}</h2>
            {
                links ? (
                    <div class="button-group">
                        {links.map((link) => (
                            <Button
                                icon={link.icon}
                                title={link.title}
                                link={link.url}
                            />
                        ))}
                    </div>
                ) : (
                    ""
                )
            }
        </div>
        <About techStack={["Rust", "Golang", "C++", "TypeScript", "Bun.js"]}>
            <p>ğŸ‘‹ Hey there! I'm Leo Jia (@yuanzui_cf)</p>
            <p>ğŸ« I'm a university student</p>
            <p>ğŸ‘€ I love Coding</p>
            <p>ğŸŒ± I'm learning Rust, Golang, TypeScript, C++ and more...</p>
            <p>
                ğŸ® When I'm not coding, you'll find me gaming - Counter-Strike
                2, Garry's Mod, and Minecraft are my go-to. If I'm free, we
                could team up!
            </p>
            <p>
                ğŸ“« Feel free to hit me up via email at <a
                    href="mailto:grassblogstu@gmail.com"
                    >grassblogstu@gmail.com</a
                > or on <a href="https://t.me/yuanzui_cf">Telegram</a>
            </p>
        </About>
        <TimeLine
            list={[
                { time: "2020", event: "Published my first blog post" },
                {
                    time: "2021",
                    event: "Began learning PHP, only to eventually discard it",
                },
                {
                    time: "2022",
                    event: "Learned JavaScript, TypeScript, and Golang; founded Grass Development Team; launched my second personal blog",
                },
                {
                    time: "2023",
                    event: "Developed 'lite-page' and launched a Minecraft server; start my third blog",
                },
                {
                    time: "2024",
                    event: "Began learning Rust and Dart",
                },
                {
                    time: "2025",
                    event: "Attended the National College Entrance Examination",
                },
            ]}
        />
        <Footer />
    </Body>
</Frame>

<style lang="less" is:global>
    h3 {
        position: relative;
        margin-bottom: 10px;

        &::before {
            position: absolute;
            left: -15px;
            content: "#";
        }
    }

    #app > div {
        margin: 20px 0;
    }
</style>

<style lang="less">
    #intro {
        margin-top: 90px;
        padding-top: 90px;

        > * {
            margin: 10px 0;
        }

        > h1 {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            font-weight: normal;

            > span {
                font-weight: bolder;
            }
        }

        > h2 {
            font-size: 14px;
            color: var(--theme-on-surface);
            font-weight: lighter;
        }

        > div.button-group {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            margin: 20px 0 0 0;
        }
    }
</style>
