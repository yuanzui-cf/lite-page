    <Head />
    <Body>
        <Header />
        <div id="intro">
            <h1>Hello, I'm&nbsp;<span>{Astro.locals.config.name}</span></h1>
            <h2>{Astro.locals.config.site?.subtitle}</h2>
            {
                links ? (
                    <div class="button-group">
                        {links.map((link) => (
                            <Button
                                icon={link.icon}
                                title={link.title}
                                link={link.url}
