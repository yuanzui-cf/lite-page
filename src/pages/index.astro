        }
    }

    #intro {
        margin-top: 90px;
        padding-top: 90px;

        > * {
            margin: 10px 0;
        }

        > h1 {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            font-weight: normal;

            > span {
                font-weight: bolder;
            }
        }

        > h2 {
            font-size: 14px;
